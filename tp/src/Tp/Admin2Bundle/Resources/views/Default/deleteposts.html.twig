{% extends 'TpAdmin2Bundle::layout-blog.html.twig' %}


{% block title %} {{parent()}} My cool blog posts / Delete {% endblock %}

{% block body %}
	<div id="containeur">
	    <div class="span-16">

	    
	        <div id="content">
				<div class="btn-toolbar">
	    <button class="btn btn-primary"><a href="{{ path('redirection_add') }}">Add</a></button>
	</div>
	<div class="well">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Titre</th>
          <th>Username</th>
          <th>Date</th>
          <th>Categorie</th>
          <th style="width: 36px;"></th>
        </tr>
      </thead>
      <tbody>
  	{% for post in posts %}
		{% include 'TpAdmin2Bundle:Default:post.html.twig' with {'post': post} %}
	{% endfor %}

        
      </tbody>
    </table>
</div>

	<div class="pagination">
    <ul>
        <li><a href="#">Prev</a></li>
