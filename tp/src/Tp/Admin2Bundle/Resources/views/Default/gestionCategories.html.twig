{% extends 'TpAdmin2Bundle::layout-blog.html.twig' %}


{% block title %} {{parent()}} My cool blog posts / Delete {% endblock %}

{% block body %}
	<div id="containeur">
	    <div class="span-16">

	    
	        <div id="content">
				<div class="btn-toolbar">
	    <button class="btn btn-primary"><a href="{{ path('redirection_add') }}">Add</a></button>
	</div>
	<div class="well">
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Titre</th>
          <th style="width: 36px;"></th>
        </tr>
      </thead>
      <tbody>
        {% for post in posts %}
        <tr>
          <td>{{post.id}}</td>
          <td><a href="{{ path('tp_blog_article', { 'id': post.id }) }}">{{post.title}}</a></td>
          <td>
              <a href="{{ path('tp_admin_categorie_update', { 'id': post.id }) }}"><i class="icon-pencil"></i></a>
              <a href="{{ path('tp_admin_categorie_suppression', { 'id': post.id }) }}" role="button" data-toggle="modal"><i class="icon-remove"></i></a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
</div>
<div class="modal small hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Delete Confirmation</h3>
    </div>
    <div class="modal-body">
        <p class="error-text">Are you sure you want to delete the user?</p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
        <button class="btn btn-danger" data-dismiss="modal">Delete</button>
    </div>
</div>
        </div>
            </div>
        </div>

{% endblock %}